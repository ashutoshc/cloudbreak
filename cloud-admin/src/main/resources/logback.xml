<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="30 seconds">

    <logger name="org.springframework.boot.autoconfigure.security.AuthenticationManagerConfiguration" level="ERROR"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601} [%thread] %method:%line %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="${ADMIN_LOG_LEVEL:-INFO}">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.sequenceiq" level="${ADMIN_LOG_LEVEL:-INFO}" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>